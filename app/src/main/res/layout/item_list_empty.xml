<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:paddingTop="2dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_emptyInfo"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/txtOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lay_imgProfile"
            android:layout_toRightOf="@+id/lay_imgProfile"
            android:background="#00ffffff"
            android:editable="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="#2f5f87"
            android:textSize="11dp"
            android:textStyle="bold|italic"
            android:paddingTop="1dp"
            android:paddingBottom="1dp" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lay_imgProfile"
            android:layout_toRightOf="@+id/lay_imgProfile"
            android:background="#00ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="false"
            android:textColor="#4a4a4a"
            android:textSize="12dp"
            android:textStyle="bold|italic"
            android:gravity="left|top"
            android:layout_below="@+id/txtOwner"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lay_imgProfile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="1dp"
            android:background="#cccccc">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_div"
        android:layout_below="@+id/lay_emptyInfo"
        android:paddingTop="5dp">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c1c1c1"></FrameLayout>
    </RelativeLayout>

</RelativeLayout>