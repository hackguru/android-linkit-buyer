<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="#ffffff">

    <WebView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webViewLogin"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:background="@drawable/backrepeat"
        android:layout_alignParentRight="true"
        android:minHeight="300dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/imgIntro" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgRefresh"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/webViewLogin"
        android:layout_alignBottom="@+id/webViewLogin"
        android:src="@drawable/refresh"
        android:scaleType="centerInside" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgIntro"
        android:src="@drawable/intro_video_bg"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgPlay"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/imgIntro"
        android:layout_alignBottom="@+id/imgIntro"
        android:layout_alignLeft="@+id/imgIntro"
        android:layout_alignRight="@+id/imgIntro"
        android:src="@drawable/play96"
        android:scaleType="centerInside" />


</RelativeLayout>