<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_topBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <ProgressBar
            android:id="@+id/progressBar_load"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:indeterminate="true"
            android:max="100"
            android:progress="50" />

    </RelativeLayout>

    <WebView
        android:id="@+id/webView_Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lay_bottomBar"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lay_topBar"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />


    <RelativeLayout
        android:id="@+id/lay_bottomBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f6f6f6"
        android:clickable="true"
        android:gravity="clip_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/img_insta_preview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/btn_back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btn_back"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/img_insta_preview"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/left"
            android:text="&lt;"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_forward"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/btn_back"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/right"
            android:text=">"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btn_linkout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/btn_forward"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/linkout"
            android:text=">"
            android:visibility="visible" />

    </RelativeLayout>


</RelativeLayout>